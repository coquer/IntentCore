<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="CatIntentAndroidCodeGeneration"
            id="dk.aamj.eclipseplugin">
      </category>
      <view
            name="ViewIntentAndroidCodeGeneration"
            icon="icons/sample.gif"
            category="dk.aamj.eclipseplugin"
            class="dk.aamj.eclipseplugin.views.mainView"
            id="dk.aamj.eclipseplugin.views.mainView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
